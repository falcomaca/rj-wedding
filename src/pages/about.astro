    /* ===================== HERO ===================== */
body {
  font-family: "Boda", sans-serif;
}

/* ===================== ASISTENCIA ===================== */
.asistencia-titulo {
  display: block;
  margin-bottom: 1.2rem;

  font-size: 1.25rem;
  letter-spacing: 0.35em;
  text-transform: uppercase;

  color: #000000;
  text-align: center;
}
.asistencia {
  max-width: 900px;
  margin: 0 auto;
}

/* ===== TEXTO ===== */
.asistencia-texto {
  margin-bottom: 3rem;
  padding: 0 1.5rem;
  text-align: center;   /* üëà CLAVE */
}

.texto.aviso {
  font-size: 1.15rem;
  line-height: 1.7;
  max-width: 920px;
  margin: 0 auto;       /* üëà CLAVE */
}

.texto.aviso span {
  display: block;
  margin-top: 0.8rem;
  color: #666;
}

/* ===== SOBRE IMAGEN ===== */
.sobre-img-wrapper {
  position: relative;
  width: 520px;      /* ‚¨ÖÔ∏è M√ÅS GRANDE */
  max-width: 90vw;   /* responsive */
  overflow: visible; /* üîë CLAVE ABSOLUTA */
  margin: 5.5rem auto 4rem;
}

.sobre-img-wrapper > img:not(.sello-img) {
  width: 100%;
  display: block;
}
.sello-img {
  position: absolute;
  width: 90px;        /* üëà PRUEBA 70‚Äì100 */
  height: auto;
  top: 55%;
  left: 45%;
  transform: translateX(-50%);
  z-index: 3;
  pointer-events: none;
}

/* ===== BOT√ìN ===== */
.btn-rsvp {
  display: inline-block;
  padding: 0.95rem 2.6rem;
  background: linear-gradient(to bottom, #7c8c66, #6f7f5f);
  color: #ffffff;
  text-decoration: none;
  font-size: 1.05rem;
  letter-spacing: 0.08em;
  border-radius: 999px;
  box-shadow:
    0 10px 22px rgba(0,0,0,0.22),
    inset 0 1px 2px rgba(255,255,255,0.25);
  transition: all 0.25s ease;
}


/* Posici√≥n del bot√≥n SOBRE la imagen */
.sobre-btn {
  position: absolute;
  top: 35%;             /* ajusta aqu√≠ */
  left: 30%;
  transform: translate(-24%, -50%);
}

/* Nota */
.nota-form {
  position: absolute;
  top: 39%;          /* ajusta aqu√≠ */
  left: 47%;
  transform: translateX(-50%);
  font-size: 0.85rem;
  color: #000000;
}

/* ===================== RESPONSIVE ===================== */
/* ===================== M√ìVIL ASISTENCIA ===================== */
@media (max-width: 768px) {

  /* Texto superior */
  .asistencia-texto {
    margin-bottom: 2rem;
  }

  .texto.aviso {
    font-size: 1rem;
      padding: 0 1.25rem;  
    line-height: 1.6;
    max-width: 100%;
  }

  /* Sobre */
.sobre-img-wrapper {
  position: relative; /* aseg√∫rate de que lo tenga */
  width: 85vw;
  max-width: 360px;
  margin: 2rem auto 3rem;
}

/* BOT√ìN */
.sobre-btn {
  position: absolute;
  top: 28%;          /* ajusta fino aqu√≠ si quieres */
  left: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
  font-size: 0.9rem;
  padding: 0.75rem 1.2rem;
}

  /* Nota formulario */
.nota-form {
  position: absolute;
  top: 37%;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  font-size: 0.75rem;
  text-align: center;
}

  /* Sello */
  .sello-img {
    width: 70px;        /* üëà tama√±o correcto en m√≥vil */
    bottom: 8%;
  }
}



</style>

