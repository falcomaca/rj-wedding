<style>
/* ===================== CONTEXTO ===================== */

.asistencia {
  display: flex;
  justify-content: center;
}

/* ===================== WRAPPER ===================== */
.sobre-wrapper {
  position: relative;
  width: 720px;
  margin-top: 120px;
  margin-bottom: 9rem;
  height: 520px;
}

/* ===================== SOLAPA TRASERA ===================== */
.solapa.trasera {
  position: absolute;
  top: -39px;
  left: 50%;
  transform: translateX(-50%);
  width: 1.8%;
  height: 0;

  border-left: 350px solid transparent;
  border-right: 350px solid transparent;
  border-bottom: 220px solid #8b9a77;

  z-index: 1;
}

/* ===================== CUERPO SOBRE ===================== */
.sobre-fondo {
  position: absolute;
  top: 180px;
  left: 0;
  width: 100%;
  height: 370px;

  background: #8b9a77;
  border-radius: 6px;

  z-index: 2;
}

/* ===================== TARJETA ===================== */
.tarjeta {
  position: absolute;
  top: 19px;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;

  background: #fff;

  padding: 6.5rem 3.5rem 5rem; /* ‚¨ÖÔ∏è AQU√ç */
  border-radius: 22px;
  text-align: center;

  box-shadow:
    0 30px 70px rgba(0,0,0,0.18),
    inset 0 0 0 1px #f2f2f2;

  z-index: 6;
}

/* ===================== FRONTALES ===================== */
.frontal {
  position: absolute;
  bottom: 0;
  width: 50%;
  height: 300px;
  background: #8b9a77;
  z-index: 7;
}

.frontal.izquierdo {
  left: 0;
  clip-path: polygon(0 0, 100% 100%, 0 100%);
  border-radius: 0 0 0 6px;
}

.frontal.derecho {
  right: 0;
  clip-path: polygon(100% 0, 100% 100%, 0 100%);
  border-radius: 0 0 6px 0;
}

/* ===================== SOLAPA SUPERIOR ===================== */
.solapa.superior {
  position: absolute;
  top: -19px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;

  border-left: 340px solid transparent;
  border-right: 340px solid transparent;
  border-bottom: 200px solid #e4e0d6;

  z-index: 5;
}

/* ===================== SELLO DE CERA ===================== */
.sello {
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);

  width: 72px;
  height: 72px;
  border-radius: 50%;

  background:
    radial-gradient(circle at 30% 30%,
      #f6e3a5 0%,
      #e1c06a 35%,
      #c59a3f 60%,
      #9a7325 85%,
      #6f4f12 100%
    );

  box-shadow:
    0 14px 28px rgba(0,0,0,0.4),
    inset 0 3px 6px rgba(255,255,255,0.45),
    inset 0 -6px 10px rgba(0,0,0,0.45);

  outline: 1px solid rgba(255,255,255,0.25);
  outline-offset: -6px;

  display: flex;
  align-items: center;
  justify-content: center;

  font-family: "Playfair Display", serif;
  font-size: 1.4rem;
  letter-spacing: 0.15em;

color: #6a4a12;

/* relieve real */
text-shadow:
  0 1px 0 rgba(255,255,255,0),
  0 -1px 1px rgba(0,0,0,0.6);

  z-index: 10;
}

/* Textura org√°nica (clave) */
.sello::before {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: inherit;

  background:
    radial-gradient(circle at 18% 22%, rgba(255,255,255,0.18), transparent 38%),
    radial-gradient(circle at 72% 68%, rgba(0,0,0,0.22), transparent 42%),
    radial-gradient(circle at 55% 45%, rgba(255,255,255,0.08), transparent 55%);

  mix-blend-mode: overlay;
  opacity: 0.75;
  pointer-events: none;
}

/* Borde irregular derretido */
.sello::after {
  content: "";
  position: absolute;
  inset: -3px;

  border-radius: 50%;
  box-shadow:
    inset 0 0 0 2px rgba(255,255,255,0.08),
    inset 0 0 12px rgba(0,0,0,0.25);

  pointer-events: none;
}



/* ===================== TEXTO ===================== */
.rsvp {
  display: block;
  position: absolute;
  top: -70px;              /* controla lo alto que est√° */
  left: 50%;
  transform: translateX(-50%);

  font-size: 0.7rem;
  letter-spacing: 0.3em;
  text-transform: uppercase;
  color: #9a9a9a;

  z-index: 2;
}

.tarjeta h1 {
  font-size: 2.6rem;
  margin-bottom: 1.4rem;
}

.texto {
  font-size: 1rem;
font-family: plairflay;
margin-top: -400px;
  line-height: 1.7;
  max-width: 520px;
}

.formulario {
  font-size: 1rem;
  color: #777;
}
.olivo {
  position: absolute;
  top: 1px;     /* s√∫belo o b√°jalo */
  bottom: 0px;
  left: -16px;    /* sep√°ralo de los lados */
  right: -16px;

  background-image: url("/images/olivo.png");
  background-size: 95%;
  background-repeat: no-repeat;
  background-position: center;
  opacity: 0.45;
}

/* IMPORTANTE: el contenido va por encima */
.tarjeta > *:not(.olivo) {
  position: relative;
  top: -30px;
  z-index: 1;
}

.btn-rsvp {
  display: inline-block;
  margin-top: -40px;
  padding: 0.95rem 2.6rem;

  background: linear-gradient(
    to bottom,
    #7c8c66,
    #6f7f5f
  );

  color: #ffffff;
  text-decoration: none;

  font-family: helvetica;
  font-size: 1.05rem;
  letter-spacing: 0.08em;

  border-radius: 999px;

  box-shadow:
    0 10px 22px rgba(0,0,0,0.22),
    inset 0 1px 2px rgba(255,255,255,0.25);

  transition: all 0.25s ease;
}

.btn-rsvp:hover {
  transform: translateY(-2px);
  box-shadow:
    0 14px 28px rgba(0,0,0,0.28),
    inset 0 1px 2px rgba(255,255,255,0.25);
}

.nota-form {
  margin-top: 0.1rem;
  font-size: 0.85rem;
  color: #888;
}
.texto.aviso {
  max-width: 380px;   /* controla lo ‚Äúestrecho‚Äù */
  margin: 0 auto 2.5rem;
  line-height: 1.7;
  font-size: 1.15rem;
}

.texto.aviso span {
  display: block;
  margin-top: 0.6rem;
  font-size: 1.05rem;
  color: #666;
}

/* ===================== RESPONSIVE ===================== */
@media (max-width: 768px) {
  .sobre-wrapper {
    width: 92%;
  }

  .solapa.trasera {
    border-left-width: 47vw;
    border-right-width: 47vw;
  }

  .solapa.superior {
    border-left-width: 40vw;
    border-right-width: 40vw;
  }

  .tarjeta {
    width: 78%;
    height: 50%;
    padding: 3rem 2rem 4rem;
  }
}
</style>

</body>
</html>