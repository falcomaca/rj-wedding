<style>

.asistencia-titulo {
  display: block;
  margin-bottom: 1.2rem;

  font-size: 1.20rem;
  letter-spacing: 0.35em;
  text-transform: uppercase;

  color: #8b9a77;
  text-align: center;
}
.asistencia {
  max-width: 900px;
  margin: 0 auto;
}


.asistencia-texto {
  margin-bottom: 3rem;
  padding: 0 1.5rem;
  text-align: center;   
}

.texto.aviso {
  font-size: 1.15rem;
  line-height: 1.7;
  max-width: 920px;
  margin: 0 auto;       
}

.texto.aviso span {
  display: block;
  margin-top: 0.8rem;
  color: #666;
}


.sobre-img-wrapper {
  position: relative;
  width: 520px;      
  max-width: 90vw;   
  overflow: visible; 
  margin: 5.5rem auto 4rem;
}

.sobre-img-wrapper > img:not(.sello-img) {
  width: 100%;
  display: block;
}
.sello-img {
  position: absolute;
  width: 90px;        
  height: auto;
  top: 55%;
  left: 45%;
  transform: translateX(-50%);
  z-index: 3;
  pointer-events: none;
}


.btn-rsvp {
  display: inline-block;
  padding: 0.95rem 2.6rem;
  background: linear-gradient(to bottom, #7c8c66, #6f7f5f);
  color: #ffffff;
  text-decoration: none;
  font-family: Helvetica, Arial, sans-serif;
  font-size: 1.05rem;
  letter-spacing: 0.08em;
  border-radius: 999px;
  box-shadow:
    0 10px 22px rgba(0,0,0,0.22),
    inset 0 1px 2px rgba(255,255,255,0.25);
  transition: all 0.25s ease;
}



.sobre-btn {
  position: absolute;
  top: 35%;             
  left: 30%;
  transform: translate(-24%, -50%);
}


.nota-form {
  position: absolute;
  top: 39%;          
  left: 47%;
  transform: translateX(-50%);
  font-size: 0.85rem;
  color: #888;

}
@media (max-width: 768px) {


  .asistencia-texto {
    margin-bottom: 2rem;
  }

  .texto.aviso {
    font-size: 1rem;
      padding: 0 1.25rem;  
    line-height: 1.6;
    max-width: 100%;
  }


  .sobre-img-wrapper {
    width: 85vw;        
    max-width: 360px;   
    margin: 2rem auto 3rem;
  }



  .sobre-btn {
    top: 30%;           
    left: 46%;
    font-size: 1.75rem;
    transform: translate(-50%, -50%);
    white-space: nowrap; 
    font-size: 0.9rem;
    padding: 0.75rem 0.75rem;
  }


  .nota-form {
    top: 34%;
    font-size: 0.75rem;
    text-align: center;
    width: 90%;
  }


  .sello-img {
    width: 70px;        /
    bottom: 8%;
  }
}



</style>

